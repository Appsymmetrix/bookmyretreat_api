{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "src/types"], // Ensure src/types is included
    "types": ["node", "express"] // Make sure 'express' is included in types
  },
  "include": ["src/**/*.ts", "src/types.d.ts", "utils/**/*"], // Include types file
  "exclude": ["node_modules"]
}

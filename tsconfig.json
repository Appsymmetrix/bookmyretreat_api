{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "express"]
  },
  "include": ["src/**/*.ts", "src/types.d.ts", "utils/**/*"],
  "exclude": ["node_modules"]
}
